{
  "name": "browser-voice-plugin",
  "version": "1.1.0",
  "description": "A minimalist voice broadcast library based on javaScript v8",
  "main": "index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "test": "mocha",
    "build": "webpack"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Chenxi-Lau/browser-voice-plugin"
  },
  "keywords": ["Browser", "SpeechSynthesis", "SpVoice"],
  "author": "Chenxi_Liu",
  "license": "MIT",
  "dependencies": {
    "webpack": "^5.36.1",
    "webpack-cli": "^4.6.0"
  },
  "devDependencies": {
    "ts-loader": "^9.2.6"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "indent": [
        "error",
        2,
        {
          "ignoredNodes": ["TemplateLiteral"]
        }
      ],
      "template-curly-spacing": ["off"]
    }
  }
}
